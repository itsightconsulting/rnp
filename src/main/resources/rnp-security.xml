<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <bean id="htmlViewResolver" class="org.springframework.web.servlet.view.XmlViewResolver">
        <property name="order" value="1"/>
        <property name="location" value="classpath:rnp-security-htmlview.xml"/>
    </bean>
    <bean id="secureHandlerMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
        <property name="interceptors">
            <list>
                <ref bean="signonInterceptor"/>
            </list>
        </property>
        <property name="order" value="-1"></property>
        <property name="urlMap">
            <props>
                <prop key="/vista/sso">sunatSsoController</prop>
            </props>
        </property>
    </bean>
    <bean id="signonInterceptor" class="pe.gob.sunat.tecnologia.menu.sso.web.controller.SignonInterceptor">
        <property name="formLogonName" value="https://www.sunat.gob.pe/xssecurity/SignOnVerification.htm"/>
        <property name="view" value="htmlView"/>
    </bean>
</beans>